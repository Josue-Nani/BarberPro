@page
@model BarberPro.Pages.MiPerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
    ViewData["ShowNavbar"] = true;
}

<!-- Container Principal -->
<div class="container mx-auto px-4 py-8 max-w-6xl">

    <!-- Header Premium -->
    <div class="text-center mb-12 animate-fade-in-up">
        <div class="inline-block mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-primary to-accent rounded-2xl flex items-center justify-center shadow-2xl shadow-primary/50">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
        </div>
        <h1 class="text-5xl md:text-6xl font-black mb-4">
            <span class="bg-gradient-to-r from-primary via-accent to-primary bg-clip-text text-transparent bg-300% animate-gradient">
                Mi Perfil
            </span>
        </h1>
        <p class="text-xl opacity-70">Gestiona tu información personal</p>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success mb-6 shadow-lg animate-fade-in">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@Model.SuccessMessage</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error mb-6 shadow-lg animate-fade-in">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Left Column - Profile Photo & Info -->
        <div class="lg:col-span-1 space-y-6">
            
            <!-- Profile Photo Card -->
            <div class="premium-card animate-fade-in-up">
                <div class="card-body items-center text-center">
                    <h3 class="card-title text-2xl mb-6 text-primary">Foto de Perfil</h3>
                    
                    <!-- Avatar -->
                    <div class="avatar mb-6">
                        <div class="w-40 h-40 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                            @if (!string.IsNullOrEmpty(Model.Usuario.FotoPerfil))
                            {
                                <img src="@Model.Usuario.FotoPerfil" alt="@Model.Usuario.NombreCompleto" />
                            }
                            else
                            {
                                <div class="bg-gradient-to-br from-primary to-accent flex items-center justify-center">
                                    <span class="text-6xl font-black text-black">@Model.Usuario.NombreCompleto.Substring(0, 1)</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Upload Form -->
                    <form method="post" enctype="multipart/form-data" asp-page-handler="UploadPhoto" class="w-full">
                        <div class="form-control w-full">
                            <input type="file" 
                                   name="FotoPerfil" 
                                   accept="image/*" 
                                   class="file-input file-input-bordered file-input-primary w-full mb-4" />
                            <button type="submit" class="btn btn-primary w-full">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Subir Foto
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="premium-card animate-fade-in-up" style="animation-delay: 0.1s;">
                <div class="card-body">
                    <h3 class="card-title text-xl mb-4 text-primary">Información</h3>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <div>
                                <p class="text-xs opacity-60">Rol</p>
                                <p class="font-semibold">@Model.Usuario.Rol?.NombreRol</p>
                            </div>
                        </div>
                        <div class="divider my-2"></div>
                        <div class="flex items-center gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <div>
                                <p class="text-xs opacity-60">Miembro desde</p>
                                <p class="font-semibold">@Model.Usuario.FechaRegistro?.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="divider my-2"></div>
                        <div class="flex items-center gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <div>
                                <p class="text-xs opacity-60">Estado</p>
                                <p class="font-semibold">@(Model.Usuario.Estado == true ? "Activo" : "Inactivo")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Right Column - Edit Forms -->
        <div class="lg:col-span-2 space-y-8">
            
            <!-- Edit Profile Form -->
            <div class="premium-card animate-fade-in-up" style="animation-delay: 0.2s;">
                <div class="card-body">
                    <h3 class="card-title text-2xl mb-6 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Editar Información Personal
                    </h3>

                    <form method="post" asp-page-handler="UpdateProfile">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            
                            <!-- Nombre Completo -->
                            <div class="form-control md:col-span-2">
                                <label class="label">
                                    <span class="label-text font-semibold">Nombre Completo</span>
                                </label>
                                <input type="text" 
                                       asp-for="EditProfile.NombreCompleto" 
                                       class="input input-bordered input-primary" 
                                       placeholder="Tu nombre completo" />
                                <span asp-validation-for="EditProfile.NombreCompleto" class="text-error text-sm mt-1"></span>
                            </div>

                            <!-- Correo -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-semibold">Correo Electrónico</span>
                                </label>
                                <input type="email" 
                                       asp-for="EditProfile.Correo" 
                                       class="input input-bordered input-primary" 
                                       placeholder="tu@email.com" />
                                <span asp-validation-for="EditProfile.Correo" class="text-error text-sm mt-1"></span>
                            </div>

                            <!-- Teléfono -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-semibold">Teléfono</span>
                                </label>
                                <input type="tel" 
                                       asp-for="EditProfile.Telefono" 
                                       class="input input-bordered input-primary" 
                                       placeholder="(123) 456-7890" />
                                <span asp-validation-for="EditProfile.Telefono" class="text-error text-sm mt-1"></span>
                            </div>

                        </div>

                        <div class="card-actions justify-end mt-6">
                            <button type="submit" class="btn-premium">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Change Password Form -->
            <div class="premium-card animate-fade-in-up" style="animation-delay: 0.3s;">
                <div class="card-body">
                    <h3 class="card-title text-2xl mb-6 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        Cambiar Contraseña
                    </h3>

                    <form method="post" asp-page-handler="ChangePassword">
                        <div class="space-y-4">
                            
                            <!-- Contraseña Actual -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-semibold">Contraseña Actual</span>
                                </label>
                                <input type="password" 
                                       asp-for="ChangePassword.ContrasenaActual" 
                                       class="input input-bordered input-primary" 
                                       placeholder="••••••••" />
                                <span asp-validation-for="ChangePassword.ContrasenaActual" class="text-error text-sm mt-1"></span>
                            </div>

                            <!-- Nueva Contraseña -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-semibold">Nueva Contraseña</span>
                                </label>
                                <input type="password" 
                                       asp-for="ChangePassword.NuevaContrasena" 
                                       class="input input-bordered input-primary" 
                                       placeholder="••••••••" />
                                <span asp-validation-for="ChangePassword.NuevaContrasena" class="text-error text-sm mt-1"></span>
                                <label class="label">
                                    <span class="label-text-alt opacity-60">Mínimo 6 caracteres</span>
                                </label>
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-semibold">Confirmar Nueva Contraseña</span>
                                </label>
                                <input type="password" 
                                       asp-for="ChangePassword.ConfirmarContrasena" 
                                       class="input input-bordered input-primary" 
                                       placeholder="••••••••" />
                                <span asp-validation-for="ChangePassword.ConfirmarContrasena" class="text-error text-sm mt-1"></span>
                            </div>

                        </div>

                        <div class="card-actions justify-end mt-6">
                            <button type="submit" class="btn-premium">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                                Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-hide success/error messages after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>
}
