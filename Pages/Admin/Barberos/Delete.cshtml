@page
@model BarberPro.Pages.Admin.Barberos.DeleteModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Eliminar Barbero";
}

<div class="container py-5">
  <div class="form-card">
    <h4 class="text-gold">Eliminar barbero</h4>
    <p class="text-muted">¿Confirma eliminar al barbero <strong class="text-beige">@Model.Barbero?.Usuario?.NombreCompleto</strong>?</p>
    <form method="post">
      <input type="hidden" asp-for="Barbero.BarberoID" />
      <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-dark-custom">Cancelar</a>
      </div>
    </form>
  </div>
</div>