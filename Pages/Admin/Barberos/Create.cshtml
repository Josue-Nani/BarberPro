@page
@model BarberPro.Pages.Admin.Barberos.CreateModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Crear Barbero";
}

<div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center gap-4">
        <a asp-page="./Index" class="text-gray-400 hover:text-gold transition">
            <i class="fas fa-arrow-left text-xl"></i>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-100">Crear Nuevo Barbero</h1>
            <p class="text-gray-400 mt-1">Completa la información del barbero</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="glass-card rounded-xl p-8">
        <form method="post" class="space-y-6">
            <!-- Usuario Selection -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-user mr-2 text-gold"></i>
                    Usuario
                </label>
                <select asp-for="Barbero.UsuarioID" 
                        class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" 
                        required>
                    <option value="">Selecciona un usuario</option>
                    @foreach(var u in Model.Usuarios)
                    {
                        <option value="@u.UsuarioID">@u.NombreCompleto (@u.Correo)</option>
                    }
                </select>
                <span asp-validation-for="Barbero.UsuarioID" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <!-- Especialidades -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-scissors mr-2 text-gold"></i>
                    Especialidades
                </label>
                <input asp-for="Barbero.Especialidades" 
                       type="text"
                       class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" 
                       placeholder="Ej: Corte clásico, Barba, Afeitado" />
                <p class="text-gray-400 text-sm mt-1">Separa las especialidades con comas</p>
            </div>

            <!-- Disponibilidad -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-clock mr-2 text-gold"></i>
                    Disponibilidad (Descripción)
                </label>
                <input asp-for="Barbero.Disponibilidad" 
                       type="text"
                       class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" 
                       placeholder="Ej: Lunes a Viernes 9am-6pm" />
                <p class="text-gray-400 text-sm mt-1">Campo opcional para descripción general</p>
            </div>

            <!-- Horarios Disponibles -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-calendar-check mr-2 text-gold"></i>
                    Asignar Horarios Específicos
                </label>
                <select asp-for="HorariosSeleccionados" 
                        asp-items="Model.HorariosDisponibles" 
                        multiple 
                        size="8"
                        class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition"
                        style="min-height: 200px;">
                </select>
                <div class="flex items-start gap-2 mt-2 p-3 bg-blue-900/20 border border-blue-700/30 rounded-lg">
                    <i class="fas fa-info-circle text-blue-400 mt-0.5"></i>
                    <p class="text-sm text-blue-300">
                        Mantén presionada la tecla <kbd class="px-2 py-1 bg-slate-700 rounded text-xs">Ctrl</kbd> 
                        (o <kbd class="px-2 py-1 bg-slate-700 rounded text-xs">Cmd</kbd> en Mac) 
                        para seleccionar múltiples horarios
                    </p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-4 pt-6 border-t border-slate-700">
                <button type="submit" class="flex-1 bg-gold hover:bg-gold-dark text-slate-900 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-check-circle"></i>
                    Crear Barbero
                </button>
                <a asp-page="./Index" class="flex-1 bg-slate-700 hover:bg-slate-600 text-gray-100 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-times-circle"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
