@page
@model BarberPro.Pages.Admin.Usuarios.EditModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Editar Usuario";
}

<div class="max-w-2xl mx-auto space-y-6">
    <div class="flex items-center gap-4">
        <a href="/Admin/Usuarios/Index" class="text-gray-400 hover:text-gold transition">
            <i class="fas fa-arrow-left text-xl"></i>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-100">Editar Usuario</h1>
            <p class="text-gray-400 mt-1">Actualiza la información del usuario</p>
        </div>
    </div>

    <div class="glass-card rounded-xl p-8">
        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="Usuario.UsuarioID" />
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-user mr-2 text-gold"></i>Nombre Completo
                </label>
                <input asp-for="Usuario.NombreCompleto" type="text" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="Ej: Juan Pérez" required />
                <span asp-validation-for="Usuario.NombreCompleto" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-envelope mr-2 text-gold"></i>Correo Electrónico
                </label>
                <input asp-for="Usuario.Correo" type="email" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="ejemplo@correo.com" required />
                <span asp-validation-for="Usuario.Correo" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-phone mr-2 text-gold"></i>Teléfono
                </label>
                <input asp-for="Usuario.Telefono" type="tel" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="(555) 123-4567" />
                <span asp-validation-for="Usuario.Telefono" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-user-tag mr-2 text-gold"></i>Rol
                </label>
                <select asp-for="Usuario.RolID" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" required>
                    @foreach(var rol in Model.Roles)
                    {
                        <option value="@rol.RolID">@rol.NombreRol</option>
                    }
                </select>
                <span asp-validation-for="Usuario.RolID" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-lock mr-2 text-gold"></i>Nueva Contraseña (opcional)
                </label>
                <input asp-for="NewPassword" type="password" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="Dejar en blanco para no cambiar" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-red-400 text-sm mt-1 block"></span>
                <p class="text-xs text-gray-400 mt-1">Mínimo 6 caracteres si deseas cambiarla</p>
            </div>

            <div class="flex items-center justify-between p-4 bg-slate-700/50 rounded-lg">
                <div class="flex items-center gap-3">
                    <i class="fas fa-toggle-on text-gold text-2xl"></i>
                    <div>
                        <p class="text-sm font-medium text-gray-200">Estado del Usuario</p>
                        <p class="text-xs text-gray-400">@(Model.Usuario.Estado == true ? "Activo" : "Inactivo")</p>
                    </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" name="Usuario.Estado" value="true" @(Model.Usuario.Estado == true ? "checked" : "") class="sr-only peer" />
                    <div class="w-14 h-7 bg-slate-600 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-gold/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-gold"></div>
                </label>
            </div>

            <div class="flex gap-4 pt-6 border-t border-slate-700">
                <button type="submit" class="flex-1 bg-gold hover:bg-gold-dark text-slate-900 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-save"></i>Guardar Cambios
                </button>
                <a href="/Admin/Usuarios/Index" class="flex-1 bg-slate-700 hover:bg-slate-600 text-gray-100 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-times-circle"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
