@page
@model BarberPro.Pages.Admin.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-100">Usuarios</h1>
            <p class="text-gray-400 mt-1">Gestiona los usuarios del sistema</p>
        </div>
        <a href="/Admin/Usuarios/Create" class="btn bg-gold hover:bg-gold-dark text-slate-900 border-none gap-2">
            <i class="fas fa-plus"></i>Nuevo Usuario
        </a>
    </div>
    <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
            <i class="fas fa-search text-gray-400"></i>
            <input type="text" placeholder="Buscar usuario..." class="flex-1 bg-transparent border-none outline-none text-gray-100 placeholder-gray-500" />
        </div>
    </div>
    @if (Model.Usuarios != null && Model.Usuarios.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach(var usuario in Model.Usuarios)
            {
                <div class="glass-card rounded-xl p-6 hover:border-gold transition-all duration-300 group">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-full overflow-hidden flex items-center justify-center">
                                @if (!string.IsNullOrEmpty(usuario.FotoPerfil))
                                {
                                    <img src="@usuario.FotoPerfil" alt="@usuario.NombreCompleto" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-gold to-gold-dark flex items-center justify-center text-slate-900 font-bold text-lg">
                                        @usuario.NombreCompleto.Substring(0, 1).ToUpper()
                                    </div>
                                }
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-100 group-hover:text-gold transition">@usuario.NombreCompleto</h3>
                                <p class="text-xs text-gray-400">@usuario.Rol?.NombreRol</p>
                            </div>
                        </div>
                        <span class="px-2 py-1 text-xs rounded-full @(usuario.Estado == true ? "bg-green-900/30 text-green-400" : "bg-red-900/30 text-red-400")">
                            @(usuario.Estado == true ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <div class="space-y-3 mb-4">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-envelope text-gold"></i>
                            <p class="text-sm text-gray-200 truncate">@usuario.Correo</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-phone text-gold"></i>
                            <p class="text-sm text-gray-200">@(usuario.Telefono ?? "Sin teléfono")</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-calendar text-gold"></i>
                            <p class="text-sm text-gray-200">@(usuario.FechaRegistro?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="flex gap-2 pt-4 border-t border-slate-700">
                        <a href="/Admin/Usuarios/Edit?id=@usuario.UsuarioID" class="flex-1 btn btn-sm bg-slate-700 hover:bg-slate-600 text-gray-200 border-none gap-2">
                            <i class="fas fa-edit"></i>Editar
                        </a>
                        <a href="/Admin/Usuarios/Delete?id=@usuario.UsuarioID" class="btn btn-sm bg-red-600 hover:bg-red-700 text-white border-none gap-2">
                            <i class="fas fa-trash"></i>Eliminar
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-card rounded-xl p-12 text-center">
            <i class="fas fa-users text-6xl text-gray-600 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-300 mb-2">No hay usuarios registrados</h3>
            <p class="text-gray-400 mb-6">Comienza agregando tu primer usuario</p>
            <a href="/Admin/Usuarios/Create" class="btn bg-gold hover:bg-gold-dark text-slate-900 border-none gap-2">
                <i class="fas fa-plus"></i>Crear Usuario
            </a>
        </div>
    }
</div>

