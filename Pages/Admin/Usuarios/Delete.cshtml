@page
@model BarberPro.Pages.Admin.Usuarios.DeleteModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container py-5">
  <div class="form-card">
    <h4 class="text-gold">Eliminar usuario</h4>
    <p class="text-muted">¿Confirma eliminar al usuario <strong class="text-beige">@Model.Usuario.NombreCompleto</strong>?</p>
    <form method="post">
      <input type="hidden" asp-for="Usuario.UsuarioID" />
      <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-dark-custom">Cancelar</a>
      </div>
    </form>
  </div>
</div></div>