@page
@model BarberPro.Pages.Admin.Servicios.IndexModel
@{
    ViewData["Title"] = "Servicios";
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-100">Servicios</h1>
            <p class="text-gray-400 mt-1">Gestiona los servicios de tu barbería</p>
        </div>
        <a asp-page="./Create" class="btn bg-gold hover:bg-gold-dark text-slate-900 border-none gap-2">
            <i class="fas fa-plus"></i>Nuevo Servicio
        </a>
    </div>
    <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
            <i class="fas fa-search text-gray-400"></i>
            <input type="text" placeholder="Buscar servicio..." class="flex-1 bg-transparent border-none outline-none text-gray-100 placeholder-gray-500" />
        </div>
    </div>
    @if (Model.Servicios != null && Model.Servicios.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach(var servicio in Model.Servicios)
            {
                <div class="glass-card rounded-xl p-6 hover:border-gold transition-all duration-300 group">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-gold to-gold-dark flex items-center justify-center text-slate-900">
                                <i class="fas fa-cut text-lg"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-100 group-hover:text-gold transition">@servicio.Nombre</h3>
                                <p class="text-xs text-gray-400">ID: @servicio.ServicioID</p>
                            </div>
                        </div>
                    </div>
                    <div class="space-y-3 mb-4">
                        <div class="flex items-start gap-2">
                            <i class="fas fa-align-left text-gold mt-1"></i>
                            <div class="flex-1">
                                <p class="text-xs text-gray-400">Descripción</p>
                                <p class="text-sm text-gray-200">@(servicio.Descripcion ?? "Sin descripción")</p>
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <div class="flex items-center gap-2">
                                <i class="fas fa-clock text-gold"></i>
                                <div>
                                    <p class="text-xs text-gray-400">Duración</p>
                                    <p class="text-sm text-gray-200">@servicio.DuracionMinutos min</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="fas fa-dollar-sign text-gold"></i>
                                <div>
                                    <p class="text-xs text-gray-400">Precio</p>
                                    <p class="text-sm text-gray-200">$@servicio.Precio</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex gap-2 pt-4 border-t border-slate-700">
                        <a asp-page="./Edit" asp-route-id="@servicio.ServicioID" class="flex-1 btn btn-sm bg-slate-700 hover:bg-slate-600 text-gray-200 border-none gap-2">
                            <i class="fas fa-edit"></i>Editar
                        </a>
                        <a asp-page="./Delete" asp-route-id="@servicio.ServicioID" class="btn btn-sm bg-red-600 hover:bg-red-700 text-white border-none gap-2">
                            <i class="fas fa-trash"></i>Eliminar
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-card rounded-xl p-12 text-center">
            <i class="fas fa-cut text-6xl text-gray-600 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-300 mb-2">No hay servicios registrados</h3>
            <p class="text-gray-400 mb-6">Comienza agregando tu primer servicio</p>
            <a asp-page="./Create" class="btn bg-gold hover:bg-gold-dark text-slate-900 border-none gap-2">
                <i class="fas fa-plus"></i>Crear Servicio
            </a>
        </div>
    }
</div>
