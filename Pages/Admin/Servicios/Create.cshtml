@page
@model BarberPro.Pages.Admin.Servicios.CreateModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Crear Servicio";
}

<div class="max-w-2xl mx-auto space-y-6">
    <div class="flex items-center gap-4">
        <a href="/Admin/Servicios/Index" class="text-gray-400 hover:text-gold transition">
            <i class="fas fa-arrow-left text-xl"></i>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-100">Crear Nuevo Servicio</h1>
            <p class="text-gray-400 mt-1">Completa la información del servicio</p>
        </div>
    </div>

    <div class="glass-card rounded-xl p-8">
        <form method="post" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-cut mr-2 text-gold"></i>Nombre del Servicio
                </label>
                <input asp-for="Servicio.Nombre" type="text" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="Ej: Corte de Cabello Clásico" required />
                <span asp-validation-for="Servicio.Nombre" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                    <i class="fas fa-align-left mr-2 text-gold"></i>Descripción
                </label>
                <textarea asp-for="Servicio.Descripcion" rows="4" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition resize-none" placeholder="Describe el servicio..."></textarea>
                <span asp-validation-for="Servicio.Descripcion" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        <i class="fas fa-clock mr-2 text-gold"></i>Duración (minutos)
                    </label>
                    <input asp-for="Servicio.DuracionMinutos" type="number" min="1" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="30" required />
                    <span asp-validation-for="Servicio.DuracionMinutos" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        <i class="fas fa-dollar-sign mr-2 text-gold"></i>Precio
                    </label>
                    <input asp-for="Servicio.Precio" type="number" step="0.01" min="0" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-gold focus:ring-2 focus:ring-gold focus:ring-opacity-50 transition" placeholder="25.00" required />
                    <span asp-validation-for="Servicio.Precio" class="text-red-400 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-slate-700/50 rounded-lg">
                <div class="flex items-center gap-3">
                    <i class="fas fa-toggle-on text-gold text-2xl"></i>
                    <div>
                        <p class="text-sm font-medium text-gray-200">Estado del Servicio</p>
                        <p class="text-xs text-gray-400">Servicio activo por defecto</p>
                    </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input asp-for="Servicio.Estado" type="checkbox" class="sr-only peer" checked />
                    <div class="w-14 h-7 bg-slate-600 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-gold/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-gold"></div>
                </label>
            </div>

            <div class="flex gap-4 pt-6 border-t border-slate-700">
                <button type="submit" class="flex-1 bg-gold hover:bg-gold-dark text-slate-900 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-save"></i>Crear Servicio
                </button>
                <a href="/Admin/Servicios/Index" class="flex-1 bg-slate-700 hover:bg-slate-600 text-gray-100 font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-times-circle"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
