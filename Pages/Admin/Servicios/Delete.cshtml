@page
@model BarberPro.Pages.Admin.Servicios.DeleteModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container py-5">
  <div class="form-card">
    <h4 class="text-gold">Eliminar servicio</h4>
    <p class="text-muted">¿Confirma eliminar el servicio <strong class="text-beige">@Model.Servicio.Nombre</strong>?</p>
    <form method="post">
      <input type="hidden" asp-for="Servicio.ServicioID" />
      <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-dark-custom">Cancelar</a>
      </div>
    </form>
  </div>
</div>