@page
@model BarberPro.Pages.Admin.Reservas.IndexModel
@{
    ViewData["Title"] = "Reservas";
    ViewData["Subtitle"] = "Ver y gestionar reservas";
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <input class="form-control form-control-dark" placeholder="Buscar reserva" style="width:320px;" />
    </div>
  </div>

  <div class="card card-admin mb-3">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-dark table-admin mb-0 align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>ClienteID</th>
              <th>Barbero</th>
              <th>Servicio</th>
              <th>Fecha</th>
              <th>Hora Inicio</th>
              <th>Hora Fin</th>
              <th>Estado</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            @foreach(var r in Model.Reservas)
            {
                <tr>
                  <td>@r.ReservaID</td>
                  <td>@r.ClienteID</td>
                  <td>@r.BarberoID</td>
                  <td>@r.ServicioID</td>
                  <td>@r.FechaReserva.ToString("dd/MM/yyyy")</td>
                  <td>@r.HoraInicio.ToString(@"hh\:mm")</td>
                  <td>@r.HoraFin.ToString(@"hh\:mm")</td>
                  <td>@r.Estado</td>
                  <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@r.ReservaID" class="btn btn-sm btn-outline-light me-1">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@r.ReservaID" class="btn btn-sm btn-danger">Eliminar</a>
                  </td>
                </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>