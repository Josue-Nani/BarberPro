<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Ensure nuget.org is an explicit source and map all packages to it.
       This helps machines that have packageSourceMapping enabled to resolve packages. -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- Package source mapping: allow all packages from nuget.org -->
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
